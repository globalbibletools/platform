{
  "compilerOptions": {
      "lib": ["es2022"],

      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "verbatimModuleSyntax": true,

      "strict": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitOverride": true,

      "module": "NodeNext"
  },
  "exclude": ["node_modules"]
}
