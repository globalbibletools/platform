{
    "extends": "./base.json",
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "es2022"],
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            { 
                "name": "next"
            }
        ],
        "paths": {
          "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
